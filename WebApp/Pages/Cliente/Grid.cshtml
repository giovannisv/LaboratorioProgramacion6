@page
@model WebApp.Pages.Cliente.GridModel
@{
}

<br />
<div class=" container-fluid">
    <div class="card">
        <div class="card-header">
            Clientes
        </div>
        <div class="card-body">
            <a class="btn btn-outline-primary" asp-page="Edit">
                <i class='bx bx-add-toqueue'></i>
            </a>


            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Direccion</th>
                                <th>Telefono</th>
                                <th>Agencia</th>
                                <th>Estado</th>
                                <th>Accion</th>

                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var item in Model.GridList)
                            {
                                <tr>
                                    <td>@item.ClientesId</td>
                                    <td>@item.NombreCompleto</td>
                                    <td>@item.Direccion</td>
                                    <td>@item.Telefono</td>
                                    <td>@item.Agencias.Nombre</td>

                                    <td>@(item.Estado ? "Activo":"Inactivo")</td>
                                    <td>
                                        <a class="btn btn-outline-primary" asp-page="Edit" asp-route-id="@item.ClientesId">
                                            <i class='bx bxs-edit'></i>
                                        </a>

                                        <button type="button" class="btn btn-outline-danger"
                                                onclick="ClienteGrid.OnClickEliminar(@item.ClientesId)">
                                            <i class='bx bx-trash'></i>
                                        </button>

                                    </td>

                                </tr>

                            }



                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts{


    <script defer src="~/App/Cliente/Grid.js"></script>


}